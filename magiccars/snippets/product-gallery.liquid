  {%- comment -%}Store all video data for the modal{%- endcomment -%}
  <script>
    window.productVideos = [
      {%- for video in all_videos -%}
        {
          id: "{{ video.id }}",
          type: "{{ video.media_type }}",
          {% if video.media_type == 'external_video' -%}
          host: "{{ video.host }}",
          externalId: "{{ video.external_id }}"
          {%- else -%}
            videoUrl: "{{ video.sources[1].url | default: video.sources[0].url }}"
            {% comment %} videoUrl: "{{ video | file_url }}" {% endcomment %}
            {% comment %} videoUrl: "{{ video | file_url }}" {% endcomment %}
          {%- endif %}
        }{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ];

    // Debug: Log video data
    console.log('Product Videos:', window.productVideos);
  </script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Customer Videos Carousel
      const carousel = document.querySelector('.customer-videos__carousel');
      if (carousel) {
        const track = carousel.querySelector('.customer-videos__track');
        const prevBtn = carousel.querySelector('.customer-videos__nav--prev');
        const nextBtn = carousel.querySelector('.customer-videos__nav--next');
        const items = track.querySelectorAll('.customer-videos__item');

        let currentIndex = 0;
        const itemsToShow = window.innerWidth < 640 ? 1 : window.innerWidth < 1000 ? 2 : 4;
        const maxIndex = Math.max(0, items.length - itemsToShow);

        function updateCarousel() {
          const itemWidth = items[0].offsetWidth;
          const gap = 16;
          const offset = currentIndex * (itemWidth + gap);
          track.style.transform = `translateX(-${offset}px)`;

          prevBtn.disabled = currentIndex === 0;
          nextBtn.disabled = currentIndex >= maxIndex;
        }

        prevBtn.addEventListener('click', function() {
          if (currentIndex > 0) {
            currentIndex--;
            updateCarousel();
          }
        });

        nextBtn.addEventListener('click', function() {
          if (currentIndex < maxIndex) {
            currentIndex++;
            updateCarousel();
          }
        });

        updateCarousel();

        window.addEventListener('resize', function() {
          currentIndex = 0;
          updateCarousel();
        });
      }

      // Video Modal
      const modal = document.getElementById('customerVideoModal');
      const videoPlayer = document.getElementById('customerVideoPlayer');
      const closeBtn = modal.querySelector('.customer-video-modal__close');
      const backdrop = modal.querySelector('.customer-video-modal__backdrop');

      function openVideoModal(mediaId) {
        const modal = document.getElementById('customerVideoModal');
        const videoPlayer = document.getElementById('customerVideoPlayer');

        // Clear any previous content
        videoPlayer.innerHTML = '';

        // Find the video data
        const videoData = window.productVideos.find(v => v.id == mediaId);

        if (videoData) {
          if (videoData.type === 'external_video') {
            // Handle YouTube/Vimeo
            let embedUrl = '';
            if (videoData.host === 'youtube') {
              embedUrl = `https://www.youtube.com/embed/${videoData.externalId}?autoplay=1&rel=0`;
            } else if (videoData.host === 'vimeo') {
              embedUrl = `https://player.vimeo.com/video/${videoData.externalId}?autoplay=1`;
            }

            if (embedUrl) {
              videoPlayer.innerHTML = `<iframe src="${embedUrl}" width="100%" height="100%" frameborder="0" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>`;
            }
          } else if (videoData.type === 'video') {
            // Shopify native video
            let sourceUrl = videoData.videoUrl;

            if (sourceUrl.startsWith('//')) {
              sourceUrl = 'https:' + sourceUrl;
            }

            videoPlayer.innerHTML = `
              <video controls autoplay muted playsinline style="width:100%;height:100%;object-fit:contain;">
                <source src="${sourceUrl}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            `;
          }
        } else {
          videoPlayer.innerHTML = '<p style="color:white;text-align:center;padding:50px;">Video not found</p>';
        }

        // Show modal
        modal.style.display = 'flex';
        document.body.style.overflow = 'hidden';
      }

      function closeVideoModal() {
        const modal = document.getElementById('customerVideoModal');
        const videoPlayer = document.getElementById('customerVideoPlayer');

        // Stop and clear video
        videoPlayer.innerHTML = '';

        modal.style.display = 'none';
        document.body.style.overflow = '';
      }

      // Play button click handlers
      document.querySelectorAll('.customer-videos__play-button').forEach(function(btn) {
        btn.addEventListener('click', function(e) {
          e.preventDefault();
          const videoItem = this.closest('.customer-videos__item');
          const mediaId = videoItem.dataset.mediaId;

          if (mediaId) {
            openVideoModal(mediaId);
          }
        });
      });

      // Close modal handlers
      if (closeBtn) closeBtn.addEventListener('click', closeVideoModal);
      if (backdrop) backdrop.addEventListener('click', closeVideoModal);

      // Close on Escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape' && modal.style.display === 'flex') {
          closeVideoModal();
        }
      });
    });
  </script>

    id="variant-selects-{{ section.id }}"
    data-section="{{ section.id }}"
    {{ block.shopify_attributes }}
  >
    {%- for option in product.options_with_values -%}
      {%- liquid
        assign option_index = forloop.index
        assign swatch_count = option.values | map: 'swatch' | compact | size
        assign picker_type = block.settings.picker_type

        # Check if has variant images for Option 1
        assign has_variant_images = false
        if option_index == 1
          for value in option.values
            for variant in product.variants
              if variant.option1 == value and variant.featured_image
                assign has_variant_images = true
                break
              endif
            endfor
            if has_variant_images
              break
            endif
          endfor
        endif

        # Determine picker type based on option index and settings
        if option_index == 1
          if swatch_count > 0 and block.settings.swatch_shape != 'none'
            assign picker_type = 'swatch'
          elsif has_variant_images
            assign picker_type = 'button'
          elsif block.settings.picker_type == 'button'
            assign picker_type = 'button'
          else
            assign picker_type = 'dropdown'
          endif
        else
          # Option 2 and 3 always use dropdown
          assign picker_type = 'dropdown'
        endif
      -%}

